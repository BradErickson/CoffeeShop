<div onload="refreshCart()" class="container">
    <div class="row">
        <div class="box">
            <div class="col-lg-12 text-center">
                <h2>Order Summary</h2>
                <button class="btn btn-block btn-danger" id="clearCart" onclick="clearCart()">Clear Cart</button>
                <p class="shoppingCartItem"></p>
            </div>
            <div id="checkoutTotal" class="col-lg-12 text-right"></div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="box">
            <div>
                <div class="col-xs-12 text-center">
                    <h2>Billing Information</h2>
                </div>
                <form onsubmit="placeOrder()">
                    <div class="col-xs-12 col-lg-4 col-lg-offset-2">
                        <label for="firstname">First Name</label>
                        <input class="form-control" required type="text" id="firstname">
                        <label for="lastname">Last Name</label>
                        <input class="form-control" required type="text" id="lastname">
                        <label for="phone">Phone</label>
                        <input class="form-control" required type="tel" id="phone">
                        <label for="Address">Address</label>
                        <input class="form-control" required type="text" id="Address">
                        <label for="city">City</label>
                        <input class="form-control" required type="text" id="city">
                        <label for="state">State</label>
                        <input class="form-control" required type="text" id="State">
                    </div>
                    <div class="col-lg-3">
                        <label for="cc">Credit Card Number</label>
                        <input class="form-control" required type="number" id="cc">
                        <label for="sec">Security Code</label>
                        <input class="form-control" required type="text" id="sec">
                        <label for="exp">Expiration Date</label>
                        <input required class="form-control" type="date" id="exp">
                        <button class="btn btn-success" style="margin-top:15px;" type="submit" onclick="">Place Order</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div id="checkoutModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Order placed successfully</h4>
            </div>
            <div class="modal-body">
                Your order has been placed and will be delivered shortly.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>
<script src="~/Content/js/checkout.js"></script>